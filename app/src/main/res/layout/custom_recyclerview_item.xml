<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:padding="7dp"
    android:layout_margin="7dp"
    android:background="@drawable/shape2"
    android:weightSum="6">

    <ImageView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/Logo"
        android:src="@drawable/_035542_restaurant_outline_icon"/>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5"
        android:padding="7sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:weightSum="3"
            android:gravity="right">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/Cancel"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="5sp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black"
                android:text="Cancel"/>

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/Edit"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="5sp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black"
                android:text="Edit"/>

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/Status"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Finish"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@drawable/shape1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:id="@+id/nameOfRestaurant"
            android:textSize="18sp"
            android:text="Restaurant name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:id="@+id/Location"
            android:drawableStart="@drawable/_52521_location_on_icon"
            android:text="Location"
            android:textColor="@color/black"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/NumOfPerson"
                android:textSize="18sp"
                android:drawableStart="@drawable/_564534_customer_man_user_account_profile_icon"
                android:text="2"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:id="@+id/Time"
                android:drawableStart="@drawable/_004671_calendar_date_schedule_event_icon"
                android:text="2024-12-29 20:30"
                android:textColor="@color/black"
                android:drawablePadding="7dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:id="@+id/ReservationNumber"
            android:gravity="center"
            android:drawableStart="@drawable/_004671_calendar_date_schedule_event_icon"
            android:text="Reservation number #213123"
            android:textColor="@color/black"
            android:drawablePadding="7dp"/>

    </LinearLayout>

</LinearLayout>